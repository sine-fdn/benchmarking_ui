{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "local-demo": "concurrently --kill-others \"yarn start-node-1\" \"yarn start-node-2\"",
    "dev": "next",
    "build": "next build && tsc --project tsconfig.server.json",
    "build:cmdtool": "cd cmdtool && yarn install && yarn build",
    "generate": "prisma generate",
    "type-check": "tsc -p . --noEmit",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "postinstall": "yarn generate",
    "start-node-1": "NODE_ENV=production node ./.next/production-server/index.js",
    "start-node-2": "NODE_ENV=production node ./.next/production-server/index.js node-2",
    "start-coordinator": "PORT=3010 NODE_ENV=production node ./.next/production-server/coordinator.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^1.2.0",
    "@prisma/client": "^2.13.1",
    "@sine-fdn/sine-ts": "github:sine-fdn/sine-ts#v0.5.4",
    "bulma": "^0.9.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "next": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hook-form": "^6.13.1",
    "sass": "^1.30.0",
    "swr": "^0.3.11",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@prisma/cli": "^2.13.1",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "prettier": "^2.2.1",
    "typescript": "4.0"
  },
  "license": "MIT"
}
